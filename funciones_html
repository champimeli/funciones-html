       <head><title>funciones</title>
        <script>
            function suma (x,y,z){
                total = x + y + z;
                return total;

            }

            function suma_lista(lista_numeros){
                let total = 0;
                let i = 0;
                while(i<lista_numeros.length){
                    total = total + lista_numeros
                    i = i + 1 
                }
                return total;
            }
            function mayor (a,b){
            if(a<b);
            return b;
            }else{
            return a;
            }

            

            </script>
